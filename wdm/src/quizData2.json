{
  "quizzes": [
    {
      "id": "learning-style",
      "title": "What's Your Learning Style?",
      "questions": [
        {
          "question": "When learning something new, you prefer to...",
          "choices": {
            "optionA": "...read detailed instructions and take notes.",
            "optionB": "...watch someone demonstrate it first."
          },
          "weights": {
            "optionA": {"visual_learner": 1, "analytical": 1},
            "optionB": {"kinesthetic_learner": 1, "observational": 1}
          }
        },
        {
          "question": "In a classroom setting, you learn best when...",
          "choices": {
            "optionA": "...the instructor lectures with slides and diagrams.",
            "optionB": "...you can participate in hands-on activities."
          },
          "weights": {
            "optionA": {"visual_learner": 1, "auditory_learner": 1},
            "optionB": {"kinesthetic_learner": 1}
          }
        },
        {
          "question": "When trying to understand a complex concept, you...",
          "choices": {
            "optionA": "...draw diagrams or mind maps to visualize it.",
            "optionB": "...discuss it with others to hear different perspectives."
          },
          "weights": {
            "optionA": {"visual_learner": 1},
            "optionB": {"auditory_learner": 1, "social_learner": 1}
          }
        },
        {
          "question": "You remember information better when...",
          "choices": {
            "optionA": "...you write it down multiple times.",
            "optionB": "...you physically practice doing it."
          },
          "weights": {
            "optionA": {"reading_writing": 1, "kinesthetic_learner": 1},
            "optionB": {"kinesthetic_learner": 1, "hands_on": 1}
          }
        },
        {
          "question": "In a meeting, you prefer to...",
          "choices": {
            "optionA": "...have an agenda and follow it strictly.",
            "optionB": "...allow organic discussion and tangents."
          },
          "weights": {
            "optionA": {"structured": 1, "organized": 1},
            "optionB": {"flexible": 1, "adaptive": 1}
          }
        },
        {
          "question": "When giving instructions to someone, you...",
          "choices": {
            "optionA": "...provide detailed written steps.",
            "optionB": "...demonstrate while explaining verbally."
          },
          "weights": {
            "optionA": {"visual_learner": 1, "detail_oriented": 1},
            "optionB": {"kinesthetic_learner": 1, "auditory_learner": 1}
          }
        },
        {
